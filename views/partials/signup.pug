form(action="/auth/signup" method="post" enctype="multipart/form-data")
  label(class="form-label" for="username") Username
  input#username(class="form-control" type="text" name="username" autocomplete="username" placeholder="Username" required)
  label(class="form-label" for="email") Email
  input#email(class="form-control" type="email" name="email" placeholder="example@email.com" required)
  label(class="form-label" for="phone") Phone
  input#phone(class="form-control" type="text" name="phone" placeholder="Phone" required)
  label(class="form-label" for="address") Address
  input#address(class="form-control" type="text" name="address" placeholder="Address" required)
  label(class="form-label" for="city" ) City
  input#city(class="form-control" type="text" name="city" placeholder="City" required)
  label(class="form-label" for="country" ) Country
  input#country(class="form-control" type="text" name="country" placeholder="Country" required)
  label(class="form-label" for="birthday" ) Birthday
  input#birthday(class="form-control" type="date" name="birthday" placeholder="Birthday" required)
  label(class="form-label" for="password" ) Password
  input#password(class="form-control" type="password" name="password" autocomplete="new-password" placeholder="Password" required)
  label(class="form-label" for="verifyPassword" ) Confirm Password
  input#verifyPassword(class="form-control" type="password" name="verifyPassword" autocomplete="new-password" placeholder="Confirm Password" required)
  label(class="form-label" for="image" ) Image
  input#image(class="form-control" type="file" name="image" required)
  button(class="btn btn-primary mt-3" type="submit") Sign up
